<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             Title="HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand">
        <Label 
            
             Text="Suíte Super Luxo"
             TextColor="{StaticResource Primary}"
             FontFamily="Kalam"
             FontSize="50"
             HorizontalOptions="Center" />

        <Frame Margin="10" BackgroundColor="{StaticResource Gray100}">
            <HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Adultos:" TextColor="{StaticResource Primary}"/>
                    <Label Text="2" 
                       TextColor="{StaticResource Primary}"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label Text="Crianças:" TextColor="{StaticResource Primary}"/>
                    <Label Text="1" 
                           
       TextColor="{StaticResource Primary}"/>
                </HorizontalStackLayout>

            </HorizontalStackLayout>
        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="*,*,*"
                  RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in: "/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out: "/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia: "/>

                <Label Grid.Row="1" Grid.Column="0" Text="27/05/2024: "/>
                <Label Grid.Row="1" Grid.Column="1" Text="30/04/2024: "/>
                <Label Grid.Row="1" Grid.Column="2" Text="3: "/>
            </Grid>
        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout>
                <Label Text="Valor Total:"/>
                <Label Text="R$ 750,00"/>
            </HorizontalStackLayout>

        </Frame>
        <HorizontalStackLayout HorizontalOptions="Center" >
            
           <Button Text="avançar"
            HorizontalOptions="Center"
            Clicked="Button_Clicked" Margin="10"  />

            

            <Button Text="voltar" 
        HorizontalOptions="Center"
        Clicked="VoltarButton_Clicked" Margin="10"/>
            
        </HorizontalStackLayout>





    </VerticalStackLayout>
</ContentPage>